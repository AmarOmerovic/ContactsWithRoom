<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/backgroundColor</item>
    </style>

    <style name="ImageView" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorSecondary">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/teal_700</item>
    </style>

    <style name="shapeableImageView" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorSecondary">@color/backgroundColor</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="bottomBar" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorOnSecondary">#81E418</item>
    </style>


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:radius">3dp</item>

    </style>



</resources>